@using Microsoft.AspNetCore.Identity
@using Spoe.Data

@inject SignInManager<Empleado> SignInManager
@inject UserManager<Empleado> UserManager

@*manejo y control de usuarios*@
@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Bienvenido @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Salir</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="Identity" asp-page="/Account/Register">Registrar</a></li>
        <li><a asp-area="Identity" asp-page="/Account/Login">Acceder</a></li>
    </ul>
}